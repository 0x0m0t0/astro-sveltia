---

import Darkmode from './Darkmode.astro';
type Props ={
	title: string;
	// body: string;
	// href: string;
}

const Links = {
    home : ".",
    about: "./about",
    now: "./now"
}
const Linkeys = Object.keys(Links)
---

<nav class="nav">
    <div class="container">

        <a href={Links.home}>
        <div class="home">
            <h2>
			{Linkeys[0]}
		    </h2>
        </div>
        </a>

        <a href={Links.now}>
        <div class="links"><h2>{Linkeys[2]}</h2></div>
    </a>

        <a href={Links.about}>
        <div class="about"><h2>{Linkeys[1]}</h2></div>
         </a>

        <div class="work"></div>

      </div>
	
    <Darkmode/>
</nav>

<style>

.container {  
    display: grid;
    width: 200px;
    height: 200px;
        grid-template-columns: 1fr 1fr;
         grid-template-rows: 1fr 1fr;
        gap: 0em 0em;
        grid-auto-flow: row;
        background: rgb(212, 212, 212);
}
.container div {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  
}

.container div h2 {
   color:rgb(78, 78, 78);
}
.container div:hover {
    background: rgb(186, 186, 186);
    border-radius: 10px;
}
.home { grid-area: 1 / 1 / 3 / 2; }

.links { grid-area: 2 / 1 / 3 / 2; }

.about { grid-area: 1 / 2 / 2 / 3; }

.work { grid-area: 2 / 2 / 3 / 3; }


</style>