---
import Darkmode from './Darkmode.astro'
const Links = [
	{
		path: '/',
		label: 'Home'
	},
	{
		path: '/about',
		label: 'About'
	},
	{
		path: '/now',
		label: 'Now'
	}
]
---

<div class="text-darkSand absolute right-0 top-0 p-4 dark:text-darkText">
	<ul>
		{
			Links.length > 0
				? Links.map((l) => {
						return (
							<li class="pb-2">
								<a
									href={l.path}
									class={`relative ${
										l.path === Astro.url.pathname
											? 'text-darkSand text-opacity-40 dark:text-darkText dark:text-opacity-40'
											: ''
									}`}
								>
									{l.label}
								</a>
							</li>
						)
					})
				: null
		}
	</ul>
	<Darkmode />
</div>
