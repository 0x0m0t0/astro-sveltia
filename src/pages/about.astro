---
import Layout from '../layouts/Layout.astro'
import { getCollection } from 'astro:content'

const about = await getCollection('about')
const data = about[0]
---

<Layout title="About oxomoto" class="h-full md:h-screen">
	<main class="flex h-full flex-grow flex-col items-center justify-between p-4">
		<section class="flex max-w-2xl flex-col gap-2">
			<div class="flex w-80 flex-col items-center gap-4">
				<h2 class="bg-dark/10 w-full rounded-md p-2 text-center">About</h2>
				<div class="w-full">
					<p>
						{data.body}
						<span class="relative inline-flex h-3 w-3">
							<span
								class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-80"
							></span>
							<span class="relative inline-flex h-3 w-3 rounded-full bg-green-300"></span>
						</span>
					</p>

					<p>
						For inquiries get in touch at â†—
						<!-- simple obfuscation to avoid spam bots -->
						<a
							href="mailto:i%6efo@oxomoto%2eco"
							class="hover:text-darkSand text-blue-600 hover:underline"
						>
							info
							<span class="at"></span>
							<span class="dom"></span>
						</a>
					</p>
				</div>
			</div>
			<div class="mt-10 flex flex-col items-center gap-4">
				<h3 class="bg-dark/10 w-80 rounded-md p-2 text-center">Links</h3>
				<ul class="flex w-full flex-col items-center gap-2" aria-label="about links">
					{
						data.data.links.map((link) => {
							return (
								<li class="w-80 rounded-md border p-2 text-center">
									<a href={link.url} class="hover:text-darkSand hover:underline">
										{link.label}
									</a>
								</li>
							)
						})
					}
				</ul>
			</div>

			<div class="mt-10 flex flex-col items-center gap-4">
				<h3 class="bg-dark/10 w-80 rounded-md p-2 text-center">Services</h3>
				<ul class="flex w-full flex-col items-center gap-2" aria-label="about links">
					<li class="w-80 rounded-md border p-2 text-center">Art Direction</li>
					<li class="w-80 rounded-md border p-2 text-center">Web development</li>
					<li class="w-80 rounded-md border p-2 text-center">Graphic Design</li>
					<li class="w-80 rounded-md border p-2 text-center">Branding</li>
					<li class="w-80 rounded-md border p-2 text-center">X/UI</li>
					<li class="w-80 rounded-md border p-2 text-center">Typography</li>
					<li class="w-80 rounded-md border p-2 text-center">Consulting</li>
					<li class="w-80 rounded-md border p-2 text-center">SEO</li>
					<li class="w-80 rounded-md border p-2 text-center">E-commerce</li>
				</ul>
			</div>
		</section>
	</main>
</Layout>

<style>
	:root {
		--mydom: 'oxomoto.co';
	}
	.at:before {
		content: '@';
	}
	.dom:after {
		content: var(--mydom);
	}
</style>
