---
import Layout from '@/layouts/Layout.astro'
const { env } = Astro.locals.runtime
const domain = env.DOMAIN
import { SEO } from 'astro-seo'
import Carousel from '@/components/Carousel.astro'
import Work from '@/components/Work.astro'
---

<Layout title="oxomoto" class="h-screen">
	<SEO
		title="oxomoto graphic designer and web developer"
		description="oxomoto is a web developer and designer based in Brussels, Belgium. Graphic design, web development, typography, ux/ui design and branding."
		openGraph={{
			basic: {
				title: 'oxomoto web developer and graphic designer',
				type: 'website',
				image: `${domain}images/socials/oxomoto_opengraph.png`
			}
		}}
		twitter={{
			creator: '@oxomoto'
		}}
		slot="head"
	/>

	<main class="flex flex-col">
		<p class="desc prose rounded-md border p-4">
			Freelance webdeveloper & graphic designer, based in Brussels, Belgium.
		</p>
		<Work />
		<section class="my-10 mb-60 flex flex-col items-center">
			<h3
				class="bg-mauve dark:bg-dark hover:bg-dark dark:hover:bg-mauve hover:text-darkText dark:hover:text-mauve relative w-80 cursor-pointer rounded-md border px-4 py-8 text-center"
			>
				contact
			</h3>
		</section>
	</main>
</Layout>

<style>
	.desc {
		margin: 20px auto;
		line-height: 1rem;
	}
</style>
